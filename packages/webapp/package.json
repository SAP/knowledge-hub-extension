{
    "name": "@sap/knowledge-hub-extension-webapp",
    "description": "Knowledge Hub extension webview module",
    "version": "0.12.1",
    "author": "SAP SE",
    "main": "dist/index.js",
    "private": true,
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/SAP/knowledge-hub-extension.git",
        "directory": "packages/webapp"
    },
    "scripts": {
        "build": "pnpm clean && pnpm build:index && pnpm build:webapp",
        "clean": "rimraf --glob ./dist",
        "build:index": "tsc --pretty --project ./tsconfig.json --emitDeclarationOnly",
        "build:webapp": "node esbuild.js",
        "format:fix": "prettier --write '**/*.{js,json,ts,tsx,yaml,yml}' --ignore-path ../../.prettierignore",
        "lint": "eslint . --ext .ts,.tsx",
        "lint:fix": "eslint . --ext .ts,.tsx --fix",
        "watch": "pnpm clean && pnpm build:index && node esbuild.js --watch",
        "test": "jest --maxWorkers=2 --silent"
    },
    "devDependencies": {
        "@reduxjs/toolkit": "1.9.3",
        "@sap/knowledge-hub-extension-types": "workspace:*",
        "@testing-library/dom": "9.0.1",
        "@testing-library/jest-dom": "5.16.5",
        "@testing-library/react": "14.0.0",
        "@testing-library/react-hooks": "8.0.1",
        "@testing-library/user-event": "14.4.3",
        "@types/testing-library__jest-dom": "5.14.5",
        "@types/react": "18.0.28",
        "@types/react-dom": "18.0.11",
        "@types/react-redux": "7.1.25",
        "@types/redux-logger": "3.0.9",
        "@types/remote-redux-devtools": "0.5.5",
        "@types/redux-mock-store": "1.0.3",
        "autoprefixer": "10.4.14",
        "eslint-plugin-jsx-a11y": "6.7.1",
        "eslint-plugin-react": "7.32.2",
        "eslint-plugin-react-hooks": "4.6.0",
        "esbuild": "0.15.12",
        "esbuild-css-modules-plugin": "2.6.2",
        "esbuild-plugin-replace": "1.3.0",
        "esbuild-plugin-svgr": "1.0.1",
        "esbuild-sass-plugin": "2.4.0",
        "i18next": "22.4.15",
        "jest-css-modules-transform": "4.4.2",
        "jest-environment-jsdom": "29.5.0",
        "path": "0.12.7",
        "postcss": "8.4.21",
        "moment": "2.29.4",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-i18next": "12.2.0",
        "react-moment": "1.1.3",
        "react-paginate": "8.1.4",
        "react-redux": "8.0.5",
        "react-router-dom": "6.4.2",
        "redux": "4.2.1",
        "redux-logger": "3.0.6",
        "redux-mock-store": "1.5.4"
    },
    "dependencies": {
        "@fluentui/react": "8.106.4",
        "@fluentui/react-components": "9.16.0",
        "@fluentui/react-experiments": "8.14.58",
        "@sap-ux/ui-components": "1.5.0"
    }
}
