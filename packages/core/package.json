{
    "name": "@sap/knowledge-hub-extension-core",
    "description": "Knowledge Hub extension core module",
    "version": "0.15.0",
    "license": "Apache-2.0",
    "private": true,
    "main": "dist/index.js",
    "repository": {
        "type": "git",
